            <div id="sidebar-wrapper" style="z-index:2">
                <ul class="sidebar-nav" style="z-index:2">
                    <li class="sidebar-brand" style="z-index:2">
                        @Html.ActionLink("Contents", "Index", "Home")
                    </li>
                    <br />
                    <li>
                        <a href="#profile">• Profile</a>
                    </li>
                    <li>
                        <a href="#mainBody">• Education</a>
                    </li>
                    <li>
                        <a href="#experience">• Experience</a>
                    </li>
                </ul>
            </div>

            <div id="page-wrap">
                <div id = "page-content-wrapper">
                    <b id="pageTitle">Mark Poole</b>
                        <br />
                    <p id="pageLeading">Junior Web Developer</p>
                </div>
            </div>

        <span id="top-link-block" class="hidden">
            <a href="#top" class="well well-sm" onclick="$('html,body').animate({scrollTop:0},'slow');return false;">
                <i class="glyphicon glyphicon-chevron-up"></i>Back to Top
            </a>
        </span>

        @RenderBody()
            <div id="bg">
             <img src="../../Images/Hills.jpg" alt="">
            </div>
        
        <script type="text/javascript" src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/mainPageScripts.js"></script>
        <script>
            $(document).ready(function () {
                resizeProfile();
                resizeMainBody();
                resizeMainBodyWCLInfo();
                resizeLineBreak();
                resizeExperience();
                resizeContact();
                sidebarWrapper();
                smoothScroll();
                backToTopButton();
                sidebarRemover();
            });
</script>
    </body>
</html>
